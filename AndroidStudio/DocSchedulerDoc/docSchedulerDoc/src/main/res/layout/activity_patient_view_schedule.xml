<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_margin"
    android:orientation="vertical"
    tools:context=".PatientViewScheduleActivity">

    <TextView
        android:id="@+id/patDoctorName"
        android:text="@string/default_doctor_name"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/patTodayUpdate"
        android:text="@string/default_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/patTodayTitle"
        android:text="@string/today_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="gone" />

    <ListView
        android:id="@+id/patTodaySchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Button
        android:id="@+id/patViewWeeklySchedule"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="viewWeeklySched"
        android:text="@string/patient_view_weekly_sched"
        android:visibility="gone"/>

</LinearLayout>
